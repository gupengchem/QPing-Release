    </form>
    <div id="order_form_footer">
        <button type="button" class="btn btn-primary btn-small" id="order_form_save">保存</button>
        <button type="button" class="btn btn-default btn-small dol-hideModal">取消</button>
    </div>


    <!--大图-->
    <div id="imgPreview"></div>
</div>

