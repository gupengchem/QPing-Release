                    <!--</button>-->
                    <!--</div>-->
                    <!--</form>-->
                </div>
            </div>

            <div class="panel panel-default">
                <div class="panel-body">
                    <div class="queryCondition">
                        <form class="form-horizontal query-form" id="queryConditionForm">
                            <div class="row">
                                <div class="col-md-3">
                                    <div class="form-group">
                                        <label class="col-md-4 control-label">名称</label>
                                        <div class="col-md-8">
                                            <input type="text" class="form-control" placeholder="根据名称查询" name="name_like" />
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-3">
                                    <div class="form-group">
                                        <label class="col-md-4 control-label">店铺</label>
                                        <div class="col-md-8">
                                            <select name="store" class="form-control" options
                                                    optionUrl="/salesUtil/store/find" ajaxType="get" codeField="_id" nameField="name">
                                            </select>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-2">
                                    <button class="btn btn-default btn-query" type="submit">
                                        搜索
                                    </button>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-sm-6">
                    <div id="productList"></div>
                </div>
                <div class="col-sm-6">
                    <div class="panel panel-primary">
                        <div class="panel-heading">
                            <div class="panel-title">
                                销售列表
                                <div class="operationButton">
                                    <button class="btn btn-success" id="quickCreate" disabled>
                                        <span class="glyphicon glyphicon-plus"></span>
                                    </button>
                                </div>
                            </div>
                        </div>
                        <div id="dataList"></div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="default-hidden">
    <!------------------------------------------ edit form modal ------------------------------------------>
    <form class="form-horizontal edit-form" id="edit-form">
        <div class="form-group">
            <label class="col-md-2 control-label">出单日期</label>
            <div class="col-md-10">
                <div class="input-group date">
                    <span class="input-group-addon"><i class="fa fa-calendar"></i></span>
                    <input name="date" type="text" class="form-control date-picker"
                           id="date01" data-date-format="yyyy-mm-dd"
                           value="<%=global.tool.date2string(new Date(new Date().getTime()+24*60*60*1000))%>"/>
                </div>
            </div>
        </div>
        <div class="form-group">
            <label class="col-md-2 control-label">数量</label>
            <div class="col-md-10">
                <input class="form-control" name="count" type="number"/>
            </div>
        </div>
    </form>
    <div id="edit_form_footer">
        <button type="button" class="btn btn-primary btn-small" id="edit_form_save">保存</button>
        <button type="button" class="btn btn-default btn-small dol-hideModal" id="edit_form_cancel">取消</button>
    </div>

    <!------------------------------------------ order modal ------------------------------------------>
    <form class="form-horizontal edit-form" id="order-form">
        <input type="hidden" name="_id" />
        <div class="form-group">
            <label class="col-md-2 control-label">订单号</label>
            <div class="col-md-10">
                <input class="form-control" name="orderNo" type="text"/>
            </div>
        </div>
