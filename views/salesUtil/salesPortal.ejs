<% include ../../views/common/header.ejs %>
<div class="container">
    <div class="row">
        <% include ../../views/common/menu.ejs %>

        <div id="content" class="col-lg-10 col-sm-11">
            <div class="page-header">
                <h1>
                    销售管理
                    <small id="parseInfo">

                    </small>
                </h1>
                <div class="operationButton">
                    <div class="btn-group" role="group">
                        <button class="btn btn-primary" id="addData">
                            <span class="glyphicon glyphicon-plus"></span> quick Create
                        </button>
                    </div>

                    <div class="btn-group" role="group">
                        <button class="btn btn-success" id="addData">
                            <span class="glyphicon glyphicon-open"></span> order
                        </button>
                        <button class="btn btn-warning" id="editDate">
                            <span class="glyphicon glyphicon-open"></span> review
                        </button>
                        <button class="btn btn-danger" id="removeDate">
                            <span class="glyphicon glyphicon-open"></span> feedback
                        </button>
                    </div>

